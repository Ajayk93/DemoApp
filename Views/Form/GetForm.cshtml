@model DemoApp.Models.FormModel
@using DemoApp.CustomHTMLHelper

<h1>Form</h1>

@using (Html.BeginForm("GetForm","Form",FormMethod.Post, new { id= "myform"} ))
{
    @Html.ValidationSummary(true)

<div class="form-section">
    <div class="form-group">
        @Html.Label("SurName")
        @Html.TextBox("SurName","", new { @class="form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.FirstName)
        @Html.TextBoxFor(x => x.FirstName, "", new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(y => y.LastName)
        @Html.TextBoxFor(y => y.LastName, "", new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(y => y.Age)
        @Html.TextBoxFor(y => y.Age, "", new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(y => y.Score)
        @Html.TextBoxFor(y => y.Score, "", new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(y => y.Password)
        @Html.PasswordFor(y => y.Password, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(y => y.ConfirmPassword)
        @Html.PasswordFor(y => y.ConfirmPassword, new { @class = "form-control" })
    </div>
    <input type="submit" class="btn btn-default" />
</div>
}

